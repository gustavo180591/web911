{% extends 'base.html.twig' %}

{% block title %}Detalle del Reporte{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Detalle del Reporte</h1>
    <div class="mt-6">
        <p><strong>Tipo:</strong> {{ reporte.tipo }}</p>
        <p><strong>Fecha de Inicio:</strong> {{ reporte.fechaInicio|date('d/m/Y') }}</p>
        <p><strong>Fecha de Fin:</strong> {{ reporte.fechaFin|date('d/m/Y') }}</p>
    </div>
    <div id="chart-container" class="mt-10">
        <canvas id="chart"></canvas>
    </div>
</div>

{% block scripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('chart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {{ reporte.datos|json_encode|raw }},
        options: { responsive: true }
    });
</script>
{% endblock %}
{% endblock %}
