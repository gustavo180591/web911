{% extends 'base.html.twig' %}

{% block title %}Crear Reporte{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Crear Reporte</h1>
    <form method="post" class="mt-6 space-y-4">
        <div>
            <label for="tipo" class="block text-sm font-medium text-gray-700">Tipo de Reporte</label>
            <select id="tipo" name="tipo" class="w-full px-4 py-2 border rounded-md" required>
                <option value="mensual">Mensual</option>
                <option value="semanal">Semanal</option>
                <option value="personalizado">Personalizado</option>
            </select>
        </div>
        <div>
            <label for="fecha_inicio" class="block text-sm font-medium text-gray-700">Fecha de Inicio</label>
            <input type="date" id="fecha_inicio" name="fecha_inicio" class="w-full px-4 py-2 border rounded-md" required>
        </div>
        <div>
            <label for="fecha_fin" class="block text-sm font-medium text-gray-700">Fecha de Fin</label>
            <input type="date" id="fecha_fin" name="fecha_fin" class="w-full px-4 py-2 border rounded-md" required>
        </div>
        <div>
            <label for="autoridad" class="block text-sm font-medium text-gray-700">Autoridad</label>
            <select id="autoridad" name="autoridad" class="w-full px-4 py-2 border rounded-md">
                <option value="">Todas</option>
                {% for autoridad in autoridades %}
                    <option value="{{ autoridad.id }}">{{ autoridad.nombre }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Generar Reporte
            </button>
        </div>
    </form>
</div>
{% endblock %}
