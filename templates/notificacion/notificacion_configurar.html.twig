{% extends 'base.html.twig' %}

{% block title %}Configuración de Notificaciones{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Configuración de Notificaciones</h1>
    <form method="post" class="mt-6 space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700">Tipos de Notificaciones</label>
            <div class="mt-2 space-y-2">
                <label class="flex items-center">
                    <input type="checkbox" name="tipos[]" value="informativa" {% if 'informativa' in preferencias %}checked{% endif %} class="mr-2">
                    Informativas
                </label>
                <label class="flex items-center">
                    <input type="checkbox" name="tipos[]" value="alerta" {% if 'alerta' in preferencias %}checked{% endif %} class="mr-2">
                    Alertas
                </label>
                <label class="flex items-center">
                    <input type="checkbox" name="tipos[]" value="promocional" {% if 'promocional' in preferencias %}checked{% endif %} class="mr-2">
                    Promocionales
                </label>
            </div>
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Guardar Preferencias
            </button>
        </div>
    </form>
</div>
{% endblock %}
