{% extends 'base.html.twig' %}

{% block title %}Mis Notificaciones{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Mis Notificaciones</h1>
    <div class="mt-6">
        <ul class="space-y-4">
            {% for notificacion in notificaciones %}
                <li class="border border-gray-300 p-4 rounded-md flex justify-between items-center {% if notificacion.leida %}bg-gray-100{% else %}bg-white{% endif %}">
                    <div>
                        <p class="font-semibold">{{ notificacion.mensaje }}</p>
                        <small class="text-gray-500">{{ notificacion.fechaHora|date('d/m/Y H:i') }}</small>
                    </div>
                    <div class="space-x-4">
                        {% if notificacion.leida %}
                            <span class="text-green-500">Leída</span>
                        {% else %}
                            <a href="{{ path('notificacion_marcar_leida', {id: notificacion.id}) }}" class="text-blue-500 hover:underline">Marcar como Leída</a>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
