{% extends 'base.html.twig' %}

{% block title %}Enviar Notificación{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center text-blue-600">Enviar Notificación</h1>
    <form method="post" class="mt-6 space-y-4">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('enviar_notificacion') }}">

        <div>
            <label for="usuario" class="block text-sm font-medium text-gray-700">Usuario</label>
            <select id="usuario" name="usuario" class="w-full px-4 py-2 border rounded-md" required>
                {% for usuario in usuarios %}
                    <option value="{{ usuario.id }}">{{ usuario.nombre }} - {{ usuario.email }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="tipo" class="block text-sm font-medium text-gray-700">Tipo de Notificación</label>
            <select id="tipo" name="tipo" class="w-full px-4 py-2 border rounded-md" required>
                <option value="info">Información</option>
                <option value="warning">Advertencia</option>
                <option value="error">Error</option>
            </select>
        </div>

        <div>
            <label for="mensaje" class="block text-sm font-medium text-gray-700">Mensaje</label>
            <textarea id="mensaje" name="mensaje" class="w-full px-4 py-2 border rounded-md" rows="4" required placeholder="Escribe el mensaje de la notificación"></textarea>
        </div>

        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Enviar Notificación
            </button>
        </div>
    </form>

    <div class="mt-4 text-center">
        <a href="{{ path('notificacion_listar') }}" class="text-blue-500 hover:underline">Volver al Listado de Notificaciones</a>
    </div>
</div>
{% endblock %}
