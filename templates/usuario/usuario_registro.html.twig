{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-12 col-lg-8 offset-lg-2">
            <h2 class="text-center pt-5 mb-4">Registro</h2>
            <p class="text-center text-muted mb-5">Complete los siguientes campos para crear su cuenta.</p>

            {{ form_start(registroForm, { 'attr': {'class': 'row g-3'} }) }}
            
            <!-- Nombre y Apellido -->
            <div class="col-md-6">
                {{ form_label(registroForm.nombre) }}
                {{ form_widget(registroForm.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su nombre'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_label(registroForm.apellido) }}
                {{ form_widget(registroForm.apellido, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su apellido'}}) }}
            </div>

            <!-- Correo Electrónico y Teléfono -->
            <div class="col-md-6">
                {{ form_label(registroForm.email) }}
                {{ form_widget(registroForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su correo electrónico'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_label(registroForm.telefono) }}
                {{ form_widget(registroForm.telefono, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su número de teléfono'}}) }}
            </div>

            <!-- Dirección -->
            <div class="col-12">
                {{ form_label(registroForm.direccion) }}
                {{ form_widget(registroForm.direccion, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su dirección'}}) }}
            </div>

            <!-- DNI y Género -->
            <div class="col-md-6">
                {{ form_label(registroForm.dni) }}
                {{ form_widget(registroForm.dni, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su DNI'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_label(registroForm.genero) }}
                {{ form_widget(registroForm.genero, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Archivos DNI -->
            <div class="col-md-6">
                {{ form_label(registroForm.dniFrente) }}
                {{ form_widget(registroForm.dniFrente, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6">
                {{ form_label(registroForm.dniDorso) }}
                {{ form_widget(registroForm.dniDorso, {'attr': {'class': 'form-control'}}) }}
            </div>

            <!-- Contraseña -->
            <div class="col-12">
                {{ form_label(registroForm.password) }}
                {{ form_widget(registroForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su contraseña'}}) }}
            </div>

            <!-- Términos y condiciones -->
            <div class="col-12">
                <div class="form-check">
                    {{ form_widget(registroForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registroForm.agreeTerms, 'Acepto los términos y condiciones', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
            </div>

            <!-- Botón de registro -->
            <div class="col-12 d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
            </div>

            {{ form_end(registroForm) }}
        </div>
    </div>
</div>
{% endblock %}
