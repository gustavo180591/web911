{% extends 'base.html.twig' %}

{% block title %}Cambiar Rol{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center text-blue-600">Cambiar Rol de Usuario</h1>
    <form method="post" class="mt-6 space-y-4">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('cambiar_rol') }}">
        
        <div>
            <label for="rol" class="block text-sm font-medium text-gray-700">Rol</label>
            <select id="rol" name="rol" class="w-full px-4 py-2 border rounded-md" required>
                <option value="ROLE_USER" {% if usuario.rol == 'ROLE_USER' %}selected{% endif %}>Usuario</option>
                <option value="ROLE_MODERATOR" {% if usuario.rol == 'ROLE_MODERATOR' %}selected{% endif %}>Moderador</option>
                <option value="ROLE_ADMIN" {% if usuario.rol == 'ROLE_ADMIN' %}selected{% endif %}>Administrador</option>
            </select>
        </div>
        
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Guardar Cambios
            </button>
        </div>
    </form>

    <div class="mt-4 text-center">
        <a href="{{ path('usuario_listado') }}" class="text-blue-500 hover:underline">Regresar al Listado de Usuarios</a>
    </div>
</div>
{% endblock %}
