{% extends 'base.html.twig' %}

{% block title %}Gestión de Denuncias{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Gestión de Denuncias</h1>
    <form method="get" class="mt-6 space-y-4">
        <div>
            <label for="filtro_categoria" class="block text-sm font-medium text-gray-700">Filtrar por Categoría</label>
            <select id="filtro_categoria" name="categoria" class="w-full px-4 py-2 border rounded-md">
                <option value="">Todas</option>
                <option value="robo">Robo</option>
                <option value="vandalismo">Vandalismo</option>
                <option value="violencia">Violencia</option>
            </select>
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Aplicar Filtros
            </button>
        </div>
    </form>
    <table class="w-full mt-6 border-collapse border border-gray-300">
        <thead>
            <tr class="bg-gray-200">
                <th class="border border-gray-300 px-4 py-2">Categoría</th>
                <th class="border border-gray-300 px-4 py-2">Estado</th>
                <th class="border border-gray-300 px-4 py-2">Usuario</th>
                <th class="border border-gray-300 px-4 py-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for denuncia in denuncias %}
                <tr>
                    <td class="border border-gray-300 px-4 py-2">{{ denuncia.categoria }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ denuncia.estado }}</td>
                    <td class="border border-gray-300 px-4 py-2">{{ denuncia.usuario.email }}</td>
                    <td class="border border-gray-300 px-4 py-2 text-center">
                        <a href="{{ path('denuncia_detalle', {id: denuncia.id}) }}" class="text-blue-500 hover:underline">Ver</a>
                        |
                        <a href="{{ path('denuncia_editar', {id: denuncia.id}) }}" class="text-blue-500 hover:underline">Editar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
