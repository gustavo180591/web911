{% extends 'base.html.twig' %}

{% block title %}Crear Denuncia{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Crear Denuncia</h1>
    <form method="post" enctype="multipart/form-data" class="mt-6 space-y-4">
        <div>
            <label for="categoria" class="block text-sm font-medium text-gray-700">Categoría</label>
            <select id="categoria" name="categoria" class="w-full px-4 py-2 border rounded-md" required>
                <option value="robo">Robo</option>
                <option value="vandalismo">Vandalismo</option>
                <option value="violencia">Violencia</option>
                <option value="otros">Otros</option>
            </select>
        </div>
        <div>
            <label for="descripcion" class="block text-sm font-medium text-gray-700">Descripción</label>
            <textarea id="descripcion" name="descripcion" class="w-full px-4 py-2 border rounded-md" rows="4" required></textarea>
        </div>
        <div>
            <label for="ubicacion" class="block text-sm font-medium text-gray-700">Ubicación</label>
            <input type="text" id="ubicacion" name="ubicacion" class="w-full px-4 py-2 border rounded-md" required>
        </div>
        <div>
            <label for="evidencias" class="block text-sm font-medium text-gray-700">Evidencias</label>
            <input type="file" id="evidencias" name="evidencias[]" multiple class="w-full px-4 py-2 border rounded-md">
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Crear Denuncia
            </button>
        </div>
    </form>
</div>
{% endblock %}
