{% extends 'base.html.twig' %}

{% block title %}Detalle de Denuncia{% endblock %}

{% block body %}
<div class="container mx-auto max-w-lg mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Detalle de Denuncia</h1>
    <div class="mt-6 space-y-4">
        <div><strong>Categoría:</strong> {{ denuncia.categoria }}</div>
        <div><strong>Descripción:</strong> {{ denuncia.descripcion }}</div>
        <div><strong>Ubicación:</strong> {{ denuncia.ubicacion }}</div>
        <div><strong>Estado:</strong> {{ denuncia.estado }}</div>
        <div><strong>Prioridad:</strong> {{ denuncia.prioridad }}</div>
    </div>
    <div class="mt-6 text-center">
        <a href="{{ path('denuncia_listar') }}" class="text-blue-500 hover:underline">Volver</a>
    </div>
</div>
{% endblock %}
