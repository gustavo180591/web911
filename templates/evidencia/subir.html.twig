{% extends 'base.html.twig' %}

{% block title %}Subir Evidencias{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Subir Evidencias</h1>
    <form method="post" enctype="multipart/form-data" class="mt-6 space-y-4">
        <div>
            <label for="evidencias" class="block text-sm font-medium text-gray-700">Archivos</label>
            <input type="file" id="evidencias" name="evidencias[]" multiple class="w-full px-4 py-2 border rounded-md" required>
            <small class="text-gray-500">Formatos permitidos: imágenes, videos, documentos. Tamaño máximo: 10MB.</small>
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Subir Evidencias
            </button>
        </div>
    </form>
    <div class="mt-4 text-center">
        <a href="{{ path('denuncia_detalle', {id: denuncia.id}) }}" class="text-blue-500 hover:underline">Volver a la Denuncia</a>
    </div>
</div>
{% endblock %}
