{% extends 'base.html.twig' %}

{% block title %}Eliminar Evidencia{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg text-center">
    <h1 class="text-2xl font-bold text-red-500">Eliminar Evidencia</h1>
    <p class="mt-4 text-gray-700">¿Estás seguro de que deseas eliminar esta evidencia?</p>
    <p class="mt-2 text-gray-500">Esta acción no se puede deshacer.</p>
    <form method="post" class="mt-6">
        <input type="hidden" name="evidencia_id" value="{{ evidencia.id }}">
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600">
            Confirmar Eliminación
        </button>
    </form>
    <div class="mt-4">
        <a href="{{ path('evidencia_listar', {denuncia_id: evidencia.denuncia.id}) }}" class="text-blue-500 hover:underline">Cancelar</a>
    </div>
</div>
{% endblock %}
