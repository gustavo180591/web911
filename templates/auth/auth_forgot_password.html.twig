{% extends 'base.html.twig' %}

{% block title %}Recuperar Contraseña{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center mb-4 text-primary">Recuperar Contraseña</h1>
    <p class="text-sm text-gray-600 text-center mb-6">
        Ingresa tu correo electrónico para recibir un enlace que te permita restablecer tu contraseña.
    </p>
    
    {% if app.flashes('success') %}
        <div class="alert alert-success text-center mb-4">
            {{ app.flashes('success')|first }}
        </div>
    {% endif %}
    
    {% if app.flashes('error') %}
        <div class="alert alert-danger text-center mb-4">
            {{ app.flashes('error')|first }}
        </div>
    {% endif %}

    <form method="post" class="space-y-4">
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-md" placeholder="Ingresa tu correo" required aria-label="Correo Electrónico">
        </div>
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Enviar Enlace de Recuperación
            </button>
        </div>
    </form>
</div>
{% endblock %}
