{% extends 'base.html.twig' %}

{% block title %}Cerrar Sesión{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg text-center">
    <h1 class="text-2xl font-bold">¿Deseas Cerrar Sesión?</h1>
    <form method="post" class="mt-6">
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600">
            Cerrar Sesión
        </button>
    </form>
    <div class="mt-4">
        <a href="{{ path('dashboard_index') }}" class="text-blue-500 hover:underline">Cancelar</a>
    </div>
</div>
{% endblock %}
