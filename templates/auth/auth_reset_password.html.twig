{% extends 'base.html.twig' %}

{% block title %}Restablecer Contraseña{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center mb-4 text-primary">Restablecer Contraseña</h1>
    <p class="text-sm text-gray-600 text-center mb-6">
        Ingresa tu nueva contraseña y confírmala para completar el proceso de restablecimiento.
    </p>

    {% if app.flashes('error') %}
        <div class="alert alert-danger text-center mb-4">
            {{ app.flashes('error')|first }}
        </div>
    {% endif %}
    
    {% if app.flashes('success') %}
        <div class="alert alert-success text-center mb-4">
            {{ app.flashes('success')|first }}
        </div>
    {% endif %}

    <form method="post" class="space-y-4">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
        
        <div>
            <label for="new_password" class="block text-sm font-medium text-gray-700">Nueva Contraseña</label>
            <input type="password" id="new_password" name="password" class="w-full px-4 py-2 border rounded-md" placeholder="Nueva contraseña" required aria-label="Nueva Contraseña">
        </div>
        <div>
            <label for="confirm_password" class="block text-sm font-medium text-gray-700">Confirmar Contraseña</label>
            <input type="password" id="confirm_password" name="confirm_password" class="w-full px-4 py-2 border rounded-md" placeholder="Confirma tu contraseña" required aria-label="Confirmar Contraseña">
        </div>
        <div>
            <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600">
                Restablecer Contraseña
            </button>
        </div>
    </form>
</div>
{% endblock %}
