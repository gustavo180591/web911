{% extends 'base.html.twig' %}

{% block title %}Recuperar Contraseña{% endblock %}

{% block body %}
<div class="container mx-auto max-w-md mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Recuperar Contraseña</h1>
    <p class="text-center text-gray-500 mb-6">Introduce tu correo electrónico para enviar un enlace de recuperación.</p>

    <form method="post" class="space-y-4">
        <!-- Correo Electrónico -->
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Correo Electrónico</label>
            <input type="email" name="email" id="email" class="w-full px-4 py-2 border rounded-md" required>
        </div>

        <!-- Botón de Enviar -->
        <div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">
                Enviar Enlace de Recuperación
            </button>
        </div>
    </form>
</div>
{% endblock %}
