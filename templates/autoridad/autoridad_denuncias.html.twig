{% extends 'base.html.twig' %}

{% block title %}Denuncias Asignadas{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 shadow-md bg-white p-6 rounded-lg">
    <h1 class="text-2xl font-bold text-center">Denuncias Asignadas</h1>
    <ul class="space-y-4">
        {% for denuncia in denuncias %}
            <li class="border border-gray-300 p-4 rounded-md">
                <p><strong>Categor√≠a:</strong> {{ denuncia.categoria }}</p>
                <p><strong>Estado:</strong> {{ denuncia.estado }}</p>
                <p><strong>Fecha:</strong> {{ denuncia.fechaHora|date('d/m/Y H:i') }}</p>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
